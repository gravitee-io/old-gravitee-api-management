    <artifactId>gravitee-apim-gateway-standalone-container</artifactId>
    <name>Gravitee.io APIM - Gateway - Standalone - Container</name>

    <properties>
        <jetty94.wiremock.version>9.4.28.v20200408</jetty94.wiremock.version>
